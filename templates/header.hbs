                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            $( '#howToBanner' ).click(function () {
                var src = 'https://www.youtube-nocookie.com/embed/RkILQJpJZS4';
                $( '#videoHowTo' ).modal('show');
                $( '#videoHowTo iframe' ).attr('src', src);
            });

            $( '#videoHowTo button' ).click(function () {
                $( '#videoHowTo iframe' ).removeAttr('src');
            });
        </script>

    {{/if}}

