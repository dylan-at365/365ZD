<!-- Start User Profile Template -->
<div class="container">
    
    <div class="row row-light">

        <div class="col col-md-6 d-flex py-lg">
            <img src="{{user.avatar_url}}" width="80" height="80" alt="User Avatar" />

            <div class="ps-md">

                {{#if user.url}}

                    <a 
                        href="{{user.url}}" 
                        class="subheading" 
                        target="_zendesk_lotus" 
                        title="{{t 'open_user_in_support'}}"
                    >
                        {{user.name}}
                    </a>

                {{else}}
                    <span class="subheading">
                        {{user.name}}
                    </span>
                {{/if}}

                <a role="button" title="Opens a dialog" data-action="edit-profile" href="#">
                    <i class="ph ph-pencil-line"></i>
                </a>

                <ul>
                    {{#if description}}
                        <li class="pb-md pt-none">{{description}}</li>
                    {{/if}}

                    <li class="p-none">
                        {{t 'member_since'}}:
                        {{#if member_since}}
                            {{date member_since format='medium'}}
                        {{else}}
                            {{t 'no_activity_yet'}}
                        {{/if}}
                    </li>

                    <li class="p-none">
                        {{t 'last_activity'}}:
                        {{#if last_activity_at}}
                            {{date last_activity_at timeago=true}}
                        {{else}}
                            {{t 'no_activity_yet'}}
                        {{/if}}
                    </li>

                    <li class="p-none">
                        {{t 'votes'}}:
                        {{vote_count}}
                    </li>

                    <li class="p-none">
                        Saved Articles:
                        {{subscription_count}}
                    </li>

                    <li id="js-clear-theme" class="p-none pt-md">
                        <a class="button button--sm">
                            <i class="ph ph-paint-brush-household"></i>
