<script>

    $( '#js-clear-theme' ).click( function() {
        if ( !localStorage.getItem( 'colorMode' )) {
            $( this )
                .html(
                    `<a class="button button--sm button--alert" style="cursor: not-allowed;">
                        <i class="ph ph-smiley-x-eyes"></i>
                        Theme mode not set!
                    </a>`
                );

            setTimeout(() => {
                $( this )
                    .html( 
                        `<a class="button button--sm">
                            <i class="ph ph-paint-brush-household"></i>
                            Clear saved theme mode
                        </a>`
                        );
            }, 3000);
        }

        else {
            localStorage.removeItem( 'colorMode' );
            $( this )
                .html(
                    `<a class="button button--sm button--success">
                        <i class="ph ph-smiley-wink"></i>
                        Theme mode cleared! Click again to reload.
                    </a>`
                );

            $( this ).removeAttr( 'id' );
            $( this ).click( function() {
                $( this )
                .html(
                    `<a class="button button--sm button--success">
                        <i class="ph ph-smiley-wink"></i>
                        Theme mode cleared! Click again to reload.
                    </a>`
                );
                location.reload();
            });
        }
    });

</script>
