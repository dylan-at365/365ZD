<!-- Start Subscriptions Template -->
<div class="container">

    <!-- Breadcrumbs -->
    <div class="row breadcrumbs-container">
        <div class="col-12">
            {{breadcrumbs}}
        </div>
    </div>

    <div class="row subscriptions-header">
        <div class="col-12 subscriptions-info">A list of articles you've saved for future reference</div>
    </div>


    {{#if subscriptions}}
        <div class="row">
            <ul class="col-12 subscriptions-list">

                {{#each subscriptions}}
                    <li>
                        <a href="{{url}}">
                            {{title}}
                        </a>
                    </li>
                {{/each}}
            </ul>
        </div>

    {{else}}
        <div class="row">
            <div class="col-12 subscriptions-info">
                You haven't saved anything!<br/>
				Did you know you can save your favorite resources? Select the "Follow" button in any article or category and we'll keep it right here for you.
            </div>
        </div>
    {{/if}}

    <div class="row pagination_container">
        <div class="col-12 col-sm-6">
            {{pagination}}
        </div>
    </div>

</div>
<!-- End Subscriptions Template -->
