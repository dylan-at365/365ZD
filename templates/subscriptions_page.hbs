<!-- Start Subscriptions Template -->
<div class="container">

    <!-- Breadcrumbs -->
    <div class="row breadcrumbs-container row-dark">
        <div class="col-12">
            {{breadcrumbs}}
        </div>
    </div>

    <div class="row padded-content row-light">
        <div class="col-12 heading">A list of articles you've saved for future reference</div>
    </div>


    {{#if subscriptions}}
        <div class="row padded-content table-responsive row-light">
            <table class="col-12 row-light table table-striped">

                {{#each subscriptions}}
                    <tr>
                        <td>
                        <a href="{{url}}" class="link">
                            {{title}}
                        </a>
                        </td>
                    </tr>
                {{/each}}
            </table>
        </div>

    {{else}}
        <div class="row">
            <div class="col-12">
                You haven't saved anything!<br/>
				Did you know you can save your favorite resources? Select the "Follow" button in any article or category and we'll keep it right here for you.
            </div>
        </div>
    {{/if}}

    <div class="row padded-content centered-content row-light">
        <div class="col-12 col-sm-6">
            {{pagination}}
        </div>
    </div>

</div>
<!-- End Subscriptions Template -->
