<!-- Start Section Template -->
<div class="container">

    <!-- Breadcrumbs -->
    <div class="row breadcrumbs-container row-dark">
        <div class="col-12">
            {{breadcrumbs}}
        </div>
    </div>

    <div class="row padded-content row-light">
        <div class="col-12 heading">{{section.name}}</div>
    </div>

    <div class="row padded-content row-dark">

        {{#if section.sections}}
            {{#each section.sections}}
                <div class="col-sm-12 col-md-6 col-lg-3 card">
                    <a href="{{url}}" class="section_item-subsection">
                        {{name}}
                        <i class="ph-arrow-right"></i>
                    </a>
                </div>
            {{/each}}
        {{/if}}

        {{pagination "section.sections"}}
    </div>

    <div class="row padded-content row-dark">

        {{#if section.articles}}
            <ul class="col-12 card">
                {{#each section.articles}}
                    <li>
                        <a href="{{url}}" class="link">
                            {{title}}

                            {{#if internal}}
                                <i class="ph-lock-key-fill"></i>
                            {{/if}}
                        </a>
                    </li>
                {{/each}}
                {{pagination "section.articles"}}
            </ul>

        {{else}}
            <div class="col-12 card padded-content row-light">
                <div class="error-info">
                    This section does not contain any articles. It may contain other sections above.
                </div>
            </div>
        {{/if}}

    </div>
</div>
<!-- End Section Template -->
