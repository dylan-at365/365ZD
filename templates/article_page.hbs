<!-- Start Article Template -->
<div class="container">

    <!-- Breadcrumbs -->
    <div class="row breadcrumbs-container row-dark d-print-none">
        <div class="col-12">
            {{breadcrumbs}}
        </div>
    </div>

    <div class="row padded-content--no-gap row-light">
        <div class="col-12 heading">
            {{article.title}}
            {{#if article.internal}}
                <i class="ph-lock-key-fill"></i>
            {{/if}}
        </div>

        <div class="col-12 subheading--small-italic d-print-none">
            {{#is article.created_at article.updated_at}}
                {{date article.created_at timeago=true}}
            {{else}}
                {{t 'updated'}} {{date article.updated_at timeago=true}}
            {{/is}}
        </div>
    </div>

    <div class="row article-body row-light">

        <div class="col-sm-12 col-md-3 article-sidebar sidebar-hidden d-print-none">
            <div class="subheading subheading--underline">
                Table of Contents
            </div>

            <ul>
            </ul>
        </div>

        <div class="col-sm-12 col-md-05 article-sidebar__tab-container d-print-none">
            <div class="article-sidebar__tab js-toggle-sidebar">
                Table of Contents
            </div>

            <div class="article-sidebar__tab js-print-article">
                Print
            </div>

            <div class="article-sidebar__tab">
                {{subscribe}}
            </div>

            <div class="article-sidebar__tab js-scroll-top">
                <i class="ph-caret-up"></i>
            </div>
        </div>

        <div class="col article-inner">
            {{article.body}}
        </div>

    </div>

    {{#if attachments}}
        <div class="row padded-content--no-gap row-light d-print-none">
            <div class="col-12 heading">
                Attachments
            </div>

            {{#each attachments}}
                <div class="col-12">
                    <a href="{{url}}" target="_blank" rel="noopener" class="link">{{name}}</a>
                     - {{size}}
                </div>
            {{/each}}
        </div>
    {{/if}}

    {{#if article.internal}}
        <div class="row padded-content centered-content row-dark d-print-none">
            <div class="col-12 heading">
                Was this article helpful?
            </div>

            {{article.vote "up" role="radio" class="col-2 button button--hollow" selected_class="button--active"}}
            {{article.vote "down" role="radio" class="col-2 button button--hollow" selected_class="button--active"}}

            <div class="col-12">
                {{article.vote 'label' class="subheading"}}
            </div>
        </div>
    {{/if}}

</div>
<script src="{{asset 'article-page-scripts.js'}}"></script>

